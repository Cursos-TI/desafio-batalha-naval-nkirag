#include <stdio.h>

int main() {
    int tabuleiro[10][10];
    int i, j;

    // 1. Inicializar tabuleiro com 0 (água)
    for(i = 0; i < 10; i++) {
        for(j = 0; j < 10; j++) {
            tabuleiro[i][j] = 0;
        }
    }

    // ================================
    // 2. Navios horizontais e verticais
    // ================================

    // Navio horizontal (linha 1, coluna 2)
    int linhaH = 1;
    int colunaH = 2;
    tabuleiro[linhaH][colunaH] = 3;
    tabuleiro[linhaH][colunaH + 1] = 3;
    tabuleiro[linhaH][colunaH + 2] = 3;

    // Navio vertical (linha 4, coluna 5)
    int linhaV = 4;
    int colunaV = 5;
    tabuleiro[linhaV][colunaV] = 3;
    tabuleiro[linhaV + 1][colunaV] = 3;
    tabuleiro[linhaV + 2][colunaV] = 3;

    // ================================
    // 3. Navios diagonais
    // ================================

    // Navio diagonal principal (top-left -> bottom-right)
    int linhaD1 = 6;
    int colunaD1 = 0;
    for(i = 0; i < 3; i++) {
        // Verifica se não ultrapassa limite
        if(linhaD1 + i < 10 && colunaD1 + i < 10) {
            // Verifica sobreposição
            if(tabuleiro[linhaD1 + i][colunaD1 + i] == 0) {
                tabuleiro[linhaD1 + i][colunaD1 + i] = 3;
            } else {
                printf("Erro: navio diagonal 1 sobreposto!\n");
            }
        }
    }

    // Navio diagonal secundária (top-right -> bottom-left)
    int linhaD2 = 0;
    int colunaD2 = 9;
    for(i = 0; i < 3; i++) {
        if(linhaD2 + i < 10 && colunaD2 - i >= 0) {
            if(tabuleiro[linhaD2 + i][colunaD2 - i] == 0) {
                tabuleiro[linhaD2 + i][colunaD2 - i] = 3;
            } else {
                printf("Erro: navio diagonal 2 sobreposto!\n");
            }
        }
    }

    // ================================
    // 4. Mostrar tabuleiro
    // ================================
    printf("Tabuleiro de Batalha Naval:\n\n");
    for(i = 0; i < 10; i++) {
        for(j = 0; j < 10; j++) {
            printf("%d ", tabuleiro[i][j]);
        }
        printf("\n");
    }

    return 0;
}
